<section class="product-section">
    <div class="container">
        <div class="section-header">
            <h2>LAPTOP BÁN CHẠY</h2>
            <div class="section-tabs">
                <a href="#" class="active">Laptop Gaming</a>
                <a href="#">Laptop Văn phòng</a>
                <a href="#">Laptop Đồ họa</a>
            </div>
        </div>

        <div class="product-grid">
            <div class="product-card">
                <img src="https://via.placeholder.com/250x250?text=Laptop+ASUS+TUF" alt="Product Image">
                <div class="product-info">
                    <h3 class="product-title">Laptop Gaming ASUS TUF F15 (Core i5, RTX 3050)</h3>
                    <div class="product-price">
                        <span class="price-new">21.490.000 ₫</span>
                        <span class="price-old">25.990.000 ₫</span>
                    </div>
                </div>
                <div class="product-badge">-17%</div>
            </div>

            <div class="product-card">
                <img src="https://via.placeholder.com/250x250?text=Laptop+Dell+Vostro" alt="Product Image">
                <div class="product-info">
                    <h3 class="product-title">Laptop Dell Vostro 3400 (Core i5, 8GB RAM, 512GB SSD)</h3>
                    <div class="product-price">
                        <span class="price-new">15.990.000 ₫</span>
                        <span class="price-old">18.500.000 ₫</span>
                    </div>
                </div>
                <div class="product-badge">-14%</div>
            </div>

            <div class="product-card">
                <img src="https://via.placeholder.com/250x250?text=Macbook+Air+M1" alt="Product Image">
                <div class="product-info">
                    <h3 class="product-title">Apple Macbook Air M1 (8GB RAM, 256GB SSD)</h3>
                    <div class="product-price">
                        <span class="price-new">19.990.000 ₫</span>
                        <span class="price-old">22.000.000 ₫</span>
                    </div>
                </div>
                <div class="product-badge">-9%</div>
            </div>

            <div class="product-card">
                <img src="https://via.placeholder.com/250x250?text=Laptop+Acer+Aspire" alt="Product Image">
                <div class="product-info">
                    <h3 class="product-title">Laptop Acer Aspire 7 Gaming (Ryzen 5, GTX 1650)</h3>
                    <div class="product-price">
                        <span class="price-new">16.990.000 ₫</span>
                        <span class="price-old">20.000.000 ₫</span>
                    </div>
                </div>
                <div class="product-badge">-15%</div>
            </div>

            <div class="product-card">
                <img src="https://via.placeholder.com/250x250?text=Laptop+HP+Pavilion" alt="Product Image">
                <div class="product-info">
                    <h3 class="product-title">Laptop HP Pavilion 15 (Core i7, 16GB RAM)</h3>
                    <div class="product-price">
                        <span class="price-new">24.990.000 ₫</span>
                        <span class="price-old">27.000.000 ₫</span>
                    </div>
                </div>
                <div class="product-badge">-7%</div>
            </div>
        </div>
    </div>
</section>