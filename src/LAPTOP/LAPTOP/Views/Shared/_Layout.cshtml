<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tin Học Demo</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>

    <header class="site-header">
        <div class="header-top">
            <div class="container">
                <div class="top-links">
                    <a href="#">Tra cứu bảo hành</a>
                    <a href="#">Tuyển dụng</a>
                    <a href="#">Hệ thống Showroom</a>
                </div>
                <div class="top-contact">
                    <span><i class="fa fa-phone"></i> Hotline: 1900.0000</span>
                </div>
            </div>
        </div>

        <div class="header-main">
            <div class="container">
                <div class="main-logo">
                    <a asp-page="/Index">
                        <img src="images/logo_medium.png" alt="Logo">
                    </a>
                </div>

                <div class="main-search">
                    <input type="text" placeholder="Bạn tìm gì hôm nay...">
                    <button><i class="fa fa-search"></i></button>
                </div>

                <div class="main-actions">
                    <a href="#" class="action-item">
                        <i class="fa fa-user"></i>
                        <span>Tài khoản</span>
                    </a>
                    <a href="#" class="action-item">
                        <i class="fa fa-shopping-cart"></i>
                        <span>Giỏ hàng</span>
                        <span class="cart-count">3</span>
                    </a>
                </div>
            </div>
        </div>

        <nav class="header-nav">
            <div class="container">
                <ul class="nav-menu">
                    <li class="nav-item has-submenu">
                        <a href="#"><i class="fa fa-laptop"></i> Laptop</a>
                    </li>
                    <li class="nav-item has-submenu">
                        <a href="#"><i class="fa fa-desktop"></i> PC Gaming</a>
                    </li>
                    <li class="nav-item has-submenu">
                        <a href="#"><i class="fa fa-cogs"></i> Linh kiện PC</a>
                    </li>
                    <li class="nav-item">
                        <a href="#"><i class="fa fa-display"></i> Màn hình</a>
                    </li>
                    <li class="nav-item">
                        <a href="#"><i class="fa fa-keyboard"></i> Phụ kiện</a>
                    </li>
                    <li class="nav-item">
                        <a href="#"><i class="fa fa-headset"></i> Âm thanh</a>
                    </li>
                    <li class="nav-item">
                        <a href="#"><i class="fa fa-bolt"></i> Deal Sốc</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-column">
                    <h4>CÔNG TY TIN HỌC DEMO</h4>
                    <p><strong>Showroom:</strong> 123 Đường ABC, Phường X, Quận Y, TP. HCM</p>
                    <p><strong>Email:</strong> support@demostore.com</p>
                    <p><strong>Hotline:</strong> 1900.0000 (8:30 - 21:00)</p>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                        <a href="#"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>

                <div class="footer-column">
                    <h4>CHÍNH SÁCH CÔNG TY</h4>
                    <ul>
                        <li><a href="#">Chính sách bảo hành</a></li>
                        <li><a href="#">Chính sách đổi trả</a></li>
                        <li><a href="#">Chính sách giao hàng</a></li>
                        <li><a href="#">Chính sách bảo mật</a></li>
                        <li><a href="#">Chính sách trả góp</a></li>
                    </ul>
                </div>

                <div class="footer-column">
                    <h4>HỖ TRỢ KHÁCH HÀNG</h4>
                    <ul>
                        <li><a href="#">Hướng dẫn mua hàng online</a></li>
                        <li><a href="#">Hướng dẫn thanh toán</a></li>
                        <li><a href="#">Câu hỏi thường gặp</a></li>
                        <li><a href="#">Gửi yêu cầu hỗ trợ</a></li>
                    </ul>
                </div>

                <div class="footer-column">
                    <h4>ĐĂNG KÝ NHẬN TIN</h4>
                    <p>Nhận thông tin khuyến mãi mới nhất.</p>
                    <form class="subscribe-form">
                        <input type="email" placeholder="Email của bạn...">
                        <button type="submit">Đăng ký</button>
                    </form>
                    <div class="payment-methods">
                        <img src="https://via.placeholder.com/200x50?text=Payment+Icons" alt="Payment Methods">
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Bản quyền thuộc về Công ty Tin Học Demo.</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>