@model List<LAPTOP.Models.CartItem>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var total = Model.Sum(x => x.Total);
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container my-5">
    <div class="row">

        <!-- FORM THÔNG TIN GIAO HÀNG -->
        <div class="col-lg-7 col-md-7 mb-4">
            <h3 class="mb-3 fw-bold">Thông tin giao hàng</h3>

            <form method="post" action="/Checkout/SubmitOrder">

                <div class="mb-3">
                    <label class="form-label">Họ và tên</label>
                    <input type="text" name="name" class="form-control form-control-lg" required />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control form-control-lg" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Số điện thoại</label>
                        <input type="text" name="phone" class="form-control form-control-lg" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Địa chỉ giao hàng</label>
                    <input type="text" name="address" class="form-control form-control-lg" required />
                </div>

                <button type="submit" class="btn btn-danger btn-lg w-100 mt-3">
                    ĐẶT HÀNG
                </button>
            </form>
        </div>

        <!-- TÓM TẮT ĐƠN HÀNG -->
        <div class="col-lg-5 col-md-5">
            <div class="card shadow-sm">
                <div class="card-body">

                    <h4 class="fw-bold mb-3">Đơn hàng của bạn</h4>

                    @foreach (var item in Model)
                    {
                        <div class="d-flex mb-3">
                            <img src="@item.Thumbnail" style="width:70px; height:70px; object-fit:cover;" class="me-3 rounded" />

                            <div class="flex-grow-1">
                                <p class="fw-semibold mb-1">@item.Name</p>
                                <small>Số lượng: @item.Quantity</small>
                            </div>

                            <div class="text-end fw-bold">
                                @item.Total.ToString("N0") ₫
                            </div>
                        </div>

                        <hr />
                    }

                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-semibold">Tạm tính:</span>
                        <span class="fw-bold">@total.ToString("N0") ₫</span>
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-semibold">Phí giao hàng:</span>
                        <span class="fw-bold text-success">Miễn phí</span>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between mb-2">
                        <span class="fw-bold fs-5">Tổng cộng:</span>
                        <span class="fw-bold fs-4 text-danger">@total.ToString("N0") ₫</span>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


